<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favorite_navigation"
    app:startDestination="@id/favoriteFragment">
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.heyproject.sipalingnonton.presentation.detail.DetailFragment"
        android:label="{title}">
        <argument
            android:name="movieId"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="title"
            android:defaultValue="title_default"
            app:argType="string" />
        <argument
            android:name="isFavorite"
            android:defaultValue="false"
            app:argType="boolean" />
        <argument
            android:name="posterPath"
            android:defaultValue="default_poster_path"
            app:argType="string" />
        <argument
            android:name="overview"
            android:defaultValue="default_overview"
            app:argType="string" />
        <argument
            android:name="releaseDate"
            android:defaultValue="release_date"
            app:argType="string" />
        <argument
            android:name="backdropPath"
            android:defaultValue="backdrop_path_default"
            app:argType="string" />
        <argument
            android:name="voteAverage"
            android:defaultValue="vote_average_default"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.heyproject.favorite.presentation.favorite.FavoriteFragment"
        android:label="@string/favorite_movies">
        <action
            android:id="@+id/action_favoriteFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
</navigation>