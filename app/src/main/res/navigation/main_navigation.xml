<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.heyproject.sipalingnonton.presentation.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_detailActivity"
            app:destination="@id/detailActivity" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.heyproject.sipalingnonton.presentation.detail.DetailFragment"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="movie"
            app:argType="com.heyproject.core.domain.model.Movie" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="sipalingnonton://app/detail_fragment/{movie}" />
    </fragment>
    <activity
        android:id="@+id/detailActivity"
        android:name="com.heyproject.sipalingnonton.presentation.detail.DetailActivity"
        android:label="DetailActivity" >
        <argument
            android:name="movie"
            app:argType="com.heyproject.core.domain.model.Movie" />
    </activity>
</navigation>